@model List<Post>
@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-dark" asp-controller="Posts" asp-action="Index">Go to posts</a>

<div class="py-5 bg-light mt-1">
    <div class="container">
        <h3 class="h3">Some posts</h3>
        <div class="row">
            @foreach (Post post in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">

                        @if (post.Images.Count > 0)
                        {                           
                            <img class="card-img-top" width="225" height="225" src="data:image/jpeg;base64,@(Convert.ToBase64String(post.Images.First().ImageBytes))" />
                        }
                        else
                        {
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>
                        }

                        <div class="card-body">
                            <p class="card-text">This section will be used to display the short description of book</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Posts" asp-action="Details" asp-route-postId="@post.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                                </div>
                                <small class="text-muted">@post.Title</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
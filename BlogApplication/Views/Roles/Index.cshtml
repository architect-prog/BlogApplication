@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button class="btn btn-sm btn-danger" type="submit" >
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="btn-group-sm">
    <a class="btn btn-outline-primary" asp-controller="Roles" asp-action="Create">Create Role</a>
    <a class="btn btn-outline-primary" asp-controller="Roles" asp-action="UserList">User List</a>
</div>